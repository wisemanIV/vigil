{
  "manifest_version": 3,
  "name": "Vigil - Prevent Data Loss",
  "version": "1.0.0",
  "description": "AI-powered clipboard and file upload monitoring",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "storage": {
    "managed_schema": "schema.json"
  },
  
  "permissions": [
    "storage",
    "clipboardRead"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_start",
    "all_frames": true
  }],
  
  "web_accessible_resources": [{
    "resources": ["pdf.worker.js"],
    "matches": ["<all_urls>"]
  }],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
